ex:URLShape
    a sh:NodeShape ;
    sh:property
        [
            sh:name "FAIR F1: URL check" ;
            sh:group ex:FAIRF1Group ;
            sh:path schema:url ;
            sh:maxCount 3 ;
            sh:minCount 2 ;
            sh:nodeKind sh:IRIOrLiteral ;
            sh:severity sh:Violation
        ] ;
    sh:message "This needs to be a schema:URL"@en ;
    sh:targetClass schema:Dataset .

ex:DescriptionShape
    a sh:NodeShape ;
    sh:property
        [
            sh:name "FAIR A1: Description present and detailed" ;
            sh:group ex:FAIRA1Group ;
            sh:path schema:description ;
            sh:nodeKind sh:Literal ;
            sh:minCount 1 ;
            sh:minLength 250 ;
            sh:severity sh:Info

        ] ;
    sh:message "Needs to be longer than 250 characters"@en ;
    sh:targetClass schema:Dataset .

